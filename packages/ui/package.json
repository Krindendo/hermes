{
  "name": "@hermes/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./styles.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint src/",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.274.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "vitest": "^0.34.5"
  },
  "devDependencies": {
    "@hermes/eslint-config": "0.2.0",
    "@hermes/prettier-config": "^0.1.0",
    "@hermes/tailwind-config": "^0.1.0",
    "@hermes/tsconfig": "^0.1.0",
    "@hermes/tsup-config": "0.1.0",
    "@types/react": "^18.2.22",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "postcss": "8.4.26",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "tailwindcss": "3.3.2",
    "tsup": "6.7.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@hermes/eslint-config/base",
      "@hermes/eslint-config/react"
    ]
  },
  "prettier": "@hermes/prettier-config"
}
