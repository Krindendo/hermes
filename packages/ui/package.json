{
  "name": "@hermes/ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    "./styles.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.js"
    }
  },
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint src/",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.274.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@hermes/eslint-config": "0.2.0",
    "@hermes/prettier-config": "^0.1.0",
    "@hermes/tailwind-config": "^0.1.0",
    "@hermes/tsconfig": "^0.1.0",
    "@hermes/tsup-config": "0.1.0",
    "@types/react": "^18.2.21",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "postcss": "8.4.26",
    "prettier": "^3.0.2",
    "react": "18.2.0",
    "tailwindcss": "3.3.2",
    "tsup": "6.7.0",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@hermes/eslint-config/base",
      "@hermes/eslint-config/react"
    ]
  },
  "prettier": "@hermes/prettier-config"
}
